{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npx swc ./src --config-file .swcrc --out-dir ./dist",
    "build:watch": "npx swc ./src --config-file .swcrc --out-dir ./dist -w",
    "start": "node dist/index.js",
    "start:watch": "nodemon -q dist/index.js",
    "dev": "concurrently --names \"watch,server\" -c \"blue,red\" \"npm:build:watch\" \"npm:start:watch\"",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "lint:fix": "eslint --ignore-path .gitignore --ext .js,.ts --fix .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.1",
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "http-status-codes": "^2.2.0",
    "mongoose": "^6.7.5",
    "morgan": "^1.10.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.21",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0",
    "typescript": "^4.9.3"
  }
}
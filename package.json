{
    "name": "typescript-starter",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start:dev": "node dist/src/index.js dotenv_config_path=.env.development",
        "start:prod": "node dist/src/index.js dotenv_config_path=.env.production",
        "start:staging": "node dist/src/index.js dotenv_config_path=.env.staging",
        "start:watch:dev": "nodemon -q dist/src/index.js dotenv_config_path=.env.development",
        "start:watch:docker": "nodemon -q dist/src/index.js dotenv_config_path=.env.docker",
        "start:watch:staging": "nodemon -q dist/src/index.js dotenv_config_path=.env.staging",
        "start:watch:prod": "nodemon -q dist/src/index.js dotenv_config_path=.env.production",
        "pm2:dev": "pm2 start dist/src/index.js --name backend -- dotenv_config_path=.env.development",
        "pm2:prod": "pm2 start dist/src/index.js --name backend -- dotenv_config_path=.env.production",
        "pm2:staging": "pm2 start dist/src/index.js --name backend -- dotenv_config_path=.env.staging",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "dev": "concurrently --names \"watch,server\" -c \"blue,yellow\" \"yarn build:watch\" \"yarn start:watch:dev\"",
        "dev:docker": "concurrently --names \"watch,server\" -c \"blue,yellow\" \"yarn build:watch\" \"yarn start:watch:docker\"",
        "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
        "lint:fix": "eslint --ignore-path .gitignore --ext .js,.ts --fix .",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
        "test": "yarn build && jest ./dist/tests",
        "pre:commit": "yarn lint:fix && yarn format && yarn build && yarn test",
        "prepare": "husky"
    },
    "author": "tonykaram1993",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.4.0",
        "bcrypt": "^5.1.0",
        "body-parser": "^1.20.1",
        "colorette": "^2.0.20",
        "concurrently": "^7.6.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-rate-limit": "^6.7.0",
        "helmet": "^6.0.1",
        "http-status-codes": "^2.2.0",
        "jsonwebtoken": "^9.0.1",
        "lodash": "^4.17.21",
        "mongoose": "^6.7.5",
        "morgan": "^1.10.0",
        "source-map-support": "^0.5.21",
        "swagger-ui-express": "^4.6.0",
        "winston": "^3.8.2",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.14",
        "@types/jest": "^29.5.2",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/lodash": "^4.14.197",
        "@types/morgan": "^1.9.3",
        "@types/node": "^18.11.10",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "chokidar": "^3.5.3",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^9.0.11",
        "jest": "^29.5.0",
        "nodemon": "^2.0.20",
        "pinst": "^3.0.0",
        "prettier": "^2.8.0",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3"
    }
}
{
  "openapi": "3.0.3",
  "info": {
    "title": "Typescript Express Starter Swagger API Documentation",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:5000"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": [
          "index"
        ],
        "summary": "Get an acknowledgment that the server is up and running",
        "operationId": "indexGet",
        "responses": {
          "204": {
            "description": "NO_CONTENT"
          }
        }
      }
    },
    "/authentication/signup": {
      "post": {
        "tags": [
          "authentication",
          "signup",
          "post"
        ],
        "summary": "Create a new account on the platform using an email and a password",
        "operationId": "authenticationSignupPost",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  },
                  "confirmationPassword": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "email": "john@thedoes.com",
                "password": "myPassword",
                "confirmationPassword": "myPassword"
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Validation Error"
          }
        }
      }
    }
  }
}